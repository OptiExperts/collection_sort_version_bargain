<style>
   @media (min-width: 750px) {
        #slider-nav {
          display: none;
        }
   }
   #slider-nav {
        width: 100%;
        height: 100%;

        margin: 0 auto;
        border: 10px solid transparent;
        padding: 0px;

        z-index: 100;
        overflow: hidden;
        white-space: nowrap;
        box-sizing: border-box;
      }
      #slider-nav > li {
        width: 100%;
        height: 100%;

        position: relative;
        display: inline-block;
        overflow: hidden;
        font-size: 15px;
        font-size: initial;
        line-height: normal;
        transition: all 0.5s cubic-bezier(0.4, 1.3, 0.65, 1); /* Slide css animation */
        background-size: cover;
        vertical-align: top;
        box-sizing: border-box;
        white-space: normal;
        color:#ffffff;
      }
</style>
       
<div class="shipping-bar grid conf-mob">
  <div class="slider-nav-container">
    <ul id="slider-nav">
    <li>{% render 'icon-truck' %}<span>FAST DELIVERY</span></li>
    <li>{% render 'icon-return' %}<span>14 DAY RETURNS</span></li>
    <li>{% render 'icon-fast' %}<span>ENORMOUS RANGE</span></li>
    <li>{% render 'icon-kangaroo' %}<span>AUSTRALIAN OWNED</span></li>
    </ul>
  </div>
</div>
  
  <script>
     // Slide every slideDelay seconds
      const slideDelay = 3000;

      const dynamicSlider = document.getElementById("slider-nav");

      var curSlide = 0;
      window.setInterval(()=>{
        curSlide++;
        if (curSlide === dynamicSlider.childElementCount) {
          curSlide = 0;
        }

        // Actual slide
        if (curSlide > 0) {
          var changeLeft = curSlide * 5;
          var marL = 'calc(-'+curSlide+'00% - '+changeLeft+'px)';
          dynamicSlider.firstElementChild.style.setProperty("margin-left", marL);
        } else {
          dynamicSlider.firstElementChild.style.setProperty("margin-left", "-" + curSlide + "00%");
        }
      }, slideDelay);
  </script>