<div id="myDIV" class="filter-container">
   <div id="tags-load" style="display:none;"><i class="fa fa-spinner fa-pulse fa-2x"></i></div>
   <div class="filter-block">
      {% if section.settings.sidebar_title != blank %}
         <h4 class="sidebar-title">{{section.settings.sidebar_title}}</h4>
      {% endif %}
      <div id="tags-filter-content" class="sidebar-content">
         {% render 'collection_tag-filter' with {section} %}
      </div>
   </div>
</div>
<button class="filter-btn medium-up--hide" onclick="myFunction()">Filter </button>


<script>
   function myFunction() {
      document.getElementById("myDIV").classList.toggle("show-filter");
      document.body.style.overflow = 'hidden';
   }
</script>