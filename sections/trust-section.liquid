<style>.three-blocks{text-align:center;margin-top:40px}.three-blocks .h3, .three-blocks .h2, .three-blocks .h1,.three-blocks h3, .three-blocks h2,.three-blocks h1{display:flex;width:100%;justify-content:center;align-items:center;text-align:center;color:{{section.settings.blocks-hd-clr}}}.three-blocks .h4,.three-blocks h4{color:{{section.settings.blocks-subhd-clr}}}.three-blocks p{color:{{section.settings.blocks-txt-clr}}}.three-blocks .h3:after,.three-blocks .h3:before,.three-blocks h3:after,.three-blocks h3:before,.three-blocks .h2:after,.three-blocks .h2:before,.three-blocks h2:after,.three-blocks h2:before,.three-blocks .h1:after,.three-blocks .h1:before,.three-blocks h1:after,.three-blocks h1:before{content:'';border-top:2px solid;margin:0 20px 0 0;flex:1 0 20px}.three-blocks .h3:after,.three-blocks h3:after{margin:0 0 0 20px}.three-blocks .content-box img{margin-bottom:15px;width:100%;height:100%}.three-blocks .content-box .h4,.three-blocks .content-box h4{margin-bottom:12px}</style>  
{% case section.blocks.size %}
{% when 2 %}
{% assign trus-items = 'one-half' %}
{% when 3 %}
{% assign trus-items = 'one-third' %}
{% when 4 %}
{% assign trus-items = 'one-quarter' %}
{% when 5 %}
{% assign trus-items = 'one-fifth' %}
{% when 6 %}
{% assign trus-items = 'one-sixth' %}
{%-endcase %}
<div  class="three-blocks {{section.settings.trustblock-visibility}}">
   <div class="page-width">     
  {% if section.settings.block_big_head != blank %}  
          {% if section.settings.trust-h == 'h1'%}
        <h1 class="section-header text-center">{{ section.settings.block_big_head | escape }}</h1>
      {% elsif section.settings.trust-h == 'h2' %}
        <h2 class="section-header text-center">{{ section.settings.block_big_head | escape }}</h2>      
      {% else %}
        <h3 class="section-header text-center">{{ section.settings.block_big_head | escape }}</h3>      
      {% endif %} 
  {% endif %}          
      <div class="grid">
         {% for block in section.blocks %}
         <div class="content-box grid__item small--one-whole medium-up--{{trus-items}}">
            <img src="{{ block.settings.block_one_img | img_url: '1x1' }}" data-src="{{ block.settings.block_one_img | img_url: '' }}" alt="{{ block.settings.block_one_heading }}" class="lazyload animation--{{settings.lazyloading-effect}}" data-expand="-40">
            <h4>{{ block.settings.block_one_heading }}</h4>
            <p>{{ block.settings.block_one_content }}</p>
         </div>
         {% endfor %}
      </div>
   </div>
</div>
