      <div class="grid grid--no-gutters header-width grid--table site-header__mobile-nav">
        <nav class="grid__item medium-up--four-sixths small--hide" id="SiteTabMenu" role="navigation">
            {% include 'site-tab-menu' %}
         </nav>
        <div class="grid__item text-right site-header__icons medium-up--hide">
            <div class="site-header__icons-wrapper">
               {% unless linklists[section.settings.main_linklist_1] == blank and linklists[section.settings.main_linklist_3] == blank and linklists[section.settings.main_linklist_3] == blank %}
               <button type="button"
                  class="site-header__bars btn--link site-header__icon site-header__menu js-mobile-nav-toggle mobile-nav--open"
                  aria-controls="MobileNav" aria-expanded="false" aria-label="{{ 'layout.navigation.menu' | t }}">
                  <i class="fa fa-bars fa-lg " aria-hidden="true"></i>
               </button>
               {% endunless %}
            </div>
         </div>
         <div class="grid__item medium-up--one-sixth left h2 site-header__logo">
           <a href="/"> 
           		<img src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}">
           </a>
         </div>
         <nav class="grid__item medium-up--four-sixths small--hide site-header__menu" id="AccessibleNav" role="navigation">
            {% include 'site-tab-nav' %}
         </nav>
         <div class="grid__item medium-up--one-quarter text-right site-header__icons{% if shop.customer_accounts_enabled %} site-header__icons--plus{% endif %}">
            <div class="site-header__icons-wrapper">
               {% if settings.show_multiple_currencies and template != 'index' %}
               <div class="site-header__icon small--hide">
                  {% include 'currency-picker' %}
               </div>
               {% endif %}
               {% comment %} <div class="site-header__search site-header__icon">
                  {% include 'search-form' %}

               </div> {% endcomment %}
               <div class="site-header__search-custom site-header__icon">
                  {% include 'search-form-custom' %}
               </div>
               <button type="button" class="btn--link site-header__icon site-header__search-toggle js-drawer-open-top">
                  <i class="fa fa-search fa-lg" aria-hidden="true" title="{{ 'layout.navigation.search' | t }}"></i>
                  <span class="icon__fallback-text">{{ 'layout.navigation.search' | t }}</span>
               </button>
               {% if shop.customer_accounts_enabled %}
               {% if customer %}
               <a href="{{ routes.account_url }}" class="site-header__icon site-header__account"
                  title="{{ 'layout.customer.account' | t }}">
                  <i class="fa fa-user fa-lg" aria-hidden="true"></i>
                  <span class="icon__fallback-text">{{ 'layout.customer.account' | t }}</span>
               </a>
               {% else %}
               <a href="/account/login?url={{ theme_role | theme_url }}" class="site-header__icon site-header__account"
                  title="{{ 'layout.customer.log_in' | t }}">
                  <i class="fa fa-user fa-lg" aria-hidden="true"></i>
                  <span class="icon__fallback-text">{{ 'layout.customer.log_in' | t }}</span>
               </a>
               {% endif %}
               {% endif %}
               <a href="{{ routes.cart_url }}" class="site-header__icon site-header__cart"
                  title="{{ 'layout.cart.title' | t }}">
                  <i class="fa fa-shopping-cart fa-lg"></i> <span
                     class="icon__fallback-text">{{ 'layout.cart.title' | t }}</span>
                  <div id="CartCount" class="site-header__cart-count{% if cart.item_count == 0 %} hide{% endif %}"
                     data-cart-count-bubble>
                     <span data-cart-count>{{ cart.item_count }}</span>
                     <span
                        class="icon__fallback-text medium-up--hide">{{ 'layout.cart.items_count' | t: count: cart.item_count }}</span>
                  </div>
               </a>

